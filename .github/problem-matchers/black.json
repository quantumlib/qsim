{
  "problemMatcher": [
    {
      "owner": "black",
      "pattern": [
        {
          "regexp": "^--- a/(.+)$",
          "file": 1,
          "severity": "warning",
          "message": "Black detected formatting differences."
        },
        {
          "regexp": "^\\+\\+\\+ b/(.+)$",
          "file": 1,
          "severity": "warning",
          "message": "Black detected formatting differences."
        },
        {
          "regexp": "^@@ -(\\d+)(?:,\\d+)? \\+(\\d+)(?:,\\d+)? @@$",
          "line": 2,
          "severity": "warning",
          "message": "Black detected formatting differences."
        }
      ]
    }
  ]
}
